<% layout("/layout/boilerplate") -%>

    <body>
        <h3>All Listings</h3>
        <!-- <form  method="GET"action="/listing/new">
        <button type="submit">create new listing</button>
    </form> -->

        <div class="row row-cols-lg-3 row-cols-lg-2 row-cols-sm-1">
            <% for( let listing of allListing){ %>
                <a href="/listing/<%= listing._id %>" class="card-link">
                    <div class="card col">
                        <img src="<%= listing.image  %>" class="card-img-top" alt="listing_image"
                            style="height: 20rem;">
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b></br>

                                Price : &#8377;<%= listing.price.toLocaleString("en-IN") %>/night</br>


                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>



