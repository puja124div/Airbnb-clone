<% layout("/layout/boilerplate") -%>

    <body>

        <div class="row ">
            <div class="col-8 offset-2">

                <ul>
                    <h3>Details of Listing</h3>
            </div>
            <div class="card col-6 offset-2">
                <img src="<%= listing.image %>" class="card-img-top" alt="listing_image">
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            <%= listing.title %>
                        </b> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
                            <%= listing.description %><br>
                                <%= listing.price %> <br>
                                    <%= listing.country %> <br>
                                        <%= listing.location %>
                    </p>
                </div>
            </div>
            <div class="oh">
                <form class="col-1 offset-2 " method=" GET" action="/listing/<%= listing._id %>/edit">
                    <button class="btn btn-dark mb-3">Edit </button>
                </form>
                <form class="offset-4" method="POST" action="/listing/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-dark mb-3" type="submit">DELETE
                    </button>
                </form>
            </div> 
        </div>
       
        </ul>

    </body>